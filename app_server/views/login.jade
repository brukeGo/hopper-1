extends layout

block content
  .container(ng-controller="main.js")
    .card.card-container
      img(ng-src='img/bunny.png', alt='logo', width='90', height='90')
      p#profile-name.profile-name-card #{title}
      form.form-signin(action='#{link}', method='post')
        span#reauth-email.reauth-email
        input#inputEmail.form-control(type='email', placeholder='Email address', pattern='.+csulb.edu', name='email', required='', autofocus='')
        input#inputPassword.form-control(type='password', placeholder='Password', name='password', required='')
        #remember.checkbox
          label
            input(type='checkbox', value='remember-me')
            |  Remember me
        button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') SIGN IN
      a.forgot-password(ng-href='/recover') Forgot password?
      a.forgot-password(ng-href='/register')  Sign up

