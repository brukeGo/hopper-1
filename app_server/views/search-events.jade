extends layout

block content
  .container(ng-controller="main.js")
  .card.card-container
    a(ng-href='/welcome')
      img(ng-src='/img/bunny.png', alt='logo', width='90', height='90')
    p#profile-name.profile-name-card Search Events
    form(action='/events/searched' method="post")
        .input-group
            input#tags.form-control(type='text', data-role="tagsinput", placeholder='Search by keywords', name='tags', optional='')
            span.input-group-btn
              button.btn.btn-default.glyphicon.glyphicon-search(type='submit')
      