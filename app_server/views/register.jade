extends layout

block content
  .container
    .card.card-container
      a(href='/')
        img(src='/img/bunny.png', alt='logo', width='90', height='90')
      p#profile-name.profile-name-card #{title}
      .account
        h5
          | #{message}
      form.form-signin(action='#{link}')
        span#reauth-email.reauth-email
        input#inputFirstName.form-control(type='text', placeholder='First Name', required='', autofocus='')
        input#inputLastName.form-control(type='text', placeholder='Last Name', required='')
        input#inputEmail.form-control(type='email', placeholder='Email address', required='')
        input#inputPassword.form-control(type='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') #{buttonText}
