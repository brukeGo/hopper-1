block content
  .container
    .card.card-container
      p#profile-name.profile-name-card {{event.title}}
      br
      img(src='./assets/img/movie-flyer.jpg', alt='flyer', width='100%', height='100%')
      .event
        p
        h4 DATE:
        h5  {{event.startDate}}
        br
        h4 TIME:
        h5  {{event.startTime}}
        br
        h4 LOCATION:
        h5  {{event.location}}
        br
        h5
          | {{event.description}}
        br
        br
        p
        .left
          a.btn.btn-info.btn-lg(href='#')
            span.glyphicon.glyphicon-remove
        a(routerLink='/wellcome')
          img(src='./assets/img/bunny.png', alt='logo-home', width='100%', height='100%')
        .right
          a.btn.btn-info.btn-lg(href='#')
            span.glyphicon.glyphicon-heart
